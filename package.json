{
  "name": "reef-framework",
  "version": "0.0.11",
  "description": "a typescript web framework",
  "main": "/pkg/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "pkg",
    "README.md"
  ],
  "scripts": {
    "test": "./scripts/run-tests.sh",
    "test-watch": "./scripts/run-tests.sh watch",
    "tsc": "tsc",
    "lint": "biome check --apply-unsafe ./src",
    "format": "biome format --write ./src",
    "changeset": "rm -rf pkg && tsc && changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "cp -f README.md ./pkg && changeset publish",
    "release": "rm -rf pkg && tsc && release-it -y"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Altruistiq/reef.git"
  },
  "author": "gremp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Altruistiq/reef/issues"
  },
  "homepage": "https://github.com/Altruistiq/reef#readme",
  "devDependencies": {
    "@biomejs/biome": "1.0.0",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/lodash": "^4.14.195",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.4.0",
    "mocha": "^10.2.0",
    "release-it": "^17.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13"
  }
}
